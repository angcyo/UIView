<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <com.angcyo.uidemo.layout.qq.view.QQPBar
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.angcyo.uiview.widget.AnimCheckView
        android:id="@+id/anim_check_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:paddingLeft="0dp"
        android:paddingTop="2dp"
        android:paddingRight="4dp"
        android:paddingBottom="8dp"
        app:r_anim_check_succeed_ico="@drawable/ico_succeed"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.angcyo.uiview.widget.Button
            android:id="@+id/gradient1"
            style="@style/BaseSkinButtonLittleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="NONE"/>

        <com.angcyo.uiview.widget.Button
            android:id="@+id/gradient2"
            style="@style/BaseSkinButtonLittleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="GRADIENT"/>

        <com.angcyo.uiview.widget.Button
            android:id="@+id/gradient3"
            style="@style/BaseSkinButtonLittleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="FINISH"/>

        <com.angcyo.uiview.widget.Button
            android:id="@+id/gradient4"
            style="@style/BaseSkinButtonLittleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="SUCCEED"/>

    </LinearLayout>

</LinearLayout>