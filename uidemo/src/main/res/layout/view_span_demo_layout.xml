<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:orientation="vertical"

    android:padding="@dimen/base_xxhdpi">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/base_gray">

        <com.angcyo.uiview.widget.RExTextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/base_bg_selector"
            android:textSize="16sp"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_xxxhdpi"
        android:background="@color/base_gray">

        <com.angcyo.uiview.widget.RTextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/base_bg_selector"
            android:textSize="16sp"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_xhdpi"
        android:background="@color/transparent_dark80">

        <com.angcyo.uidemo.layout.demo.view.CanvasTestView
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_xhdpi"
        android:background="@color/transparent_dark80"
        android:clipChildren="false">

        <com.angcyo.uiview.widget.RSeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/base_xhdpi"
            android:background="@android:color/darker_gray"
            app:r_cur_progress="50"
            app:r_thumb_color="@color/base_white"
            app:r_thumb_type="CIRCLE"
            app:r_track_bg_color="@color/base_white_tran2"
            app:r_track_color="@color/base_white"/>
    </FrameLayout>

    <com.angcyo.uiview.widget.RSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/base_xhdpi"
        android:background="@android:color/darker_gray"
        app:r_cur_progress="50"
        app:r_thumb_color="@color/base_white"
        app:r_thumb_type="CIRCLE"
        app:r_track_bg_color="@color/base_white_tran2"
        app:r_track_color="@color/base_white"/>

    <com.angcyo.uiview.widget.RTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/transparent_dark80"
        android:drawablePadding="@dimen/base_xhdpi"
        android:drawableTop="@mipmap/demo_logo"
        android:paddingEnd="@dimen/base_xxxhdpi"
        android:text="测试文本测试文本"
        android:textSize="30dp"
        app:r_is_show_tip_text="true"
        app:r_tip_text="已开启"
        app:r_tip_text_left_offset="20dp"
        app:r_tip_text_top_offset="-5dp"/>
</LinearLayout>