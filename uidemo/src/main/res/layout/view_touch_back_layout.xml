<?xml version="1.0" encoding="utf-8"?>
<com.angcyo.uiview.viewgroup.TouchBackLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/touch_back_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_red_d85940"
        android:orientation="vertical">

        <com.angcyo.uiview.widget.RTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/base_orange_color_bg_selector"
            android:text="测试的文本"/>

        <com.angcyo.uiview.widget.Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试按钮1"/>

        <com.angcyo.uiview.widget.Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试按钮2"/>

        <com.angcyo.uiview.recycler.RRecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/base_orange"/>
    </LinearLayout>


</com.angcyo.uiview.viewgroup.TouchBackLayout>