<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <com.angcyo.uiview.widget.RTextView
        android:id="@+id/menu1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/base_bg_selector"
        android:gravity="center"
        android:padding="@dimen/base_xhdpi"
        android:text="菜单1"
        app:r_background="@color/base_orange"/>

    <com.angcyo.uiview.widget.RTextView
        android:id="@+id/menu2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/base_bg_selector"
        android:gravity="center"
        android:padding="@dimen/base_xhdpi"
        android:text="菜单2"
        app:r_background="@android:color/holo_green_dark"/>

    <com.angcyo.uiview.widget.RTextView
        android:id="@+id/menu3"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/base_bg_selector"
        android:gravity="center"
        android:padding="@dimen/base_xhdpi"
        android:text="菜单3"
        app:r_background="@android:color/holo_blue_dark"/>

</LinearLayout>