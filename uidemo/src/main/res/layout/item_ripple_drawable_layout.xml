<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.angcyo.uiview.widget.ExEditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="@dimen/base_xhdpi"
        android:gravity="top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/view1"
            android:layout_width="@dimen/base_100dpi"
            android:layout_height="@dimen/base_50dpi"
            android:layout_margin="@dimen/base_mdpi"
            android:text="ButtonTest"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/view2"
            android:layout_width="@dimen/base_100dpi"
            android:layout_height="@dimen/base_50dpi"
            android:layout_margin="@dimen/base_mdpi"
            android:text="ButtonTest"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/view3"
            android:layout_width="@dimen/base_100dpi"
            android:layout_height="@dimen/base_50dpi"
            android:layout_margin="@dimen/base_mdpi"
            android:text="ButtonTest"
            android:textAllCaps="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/view4"
            android:layout_width="@dimen/base_100dpi"
            android:layout_height="@dimen/base_50dpi"
            android:layout_margin="@dimen/base_mdpi"
            android:text="ButtonTest"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/view5"
            android:layout_width="@dimen/base_100dpi"
            android:layout_height="@dimen/base_50dpi"
            android:layout_margin="@dimen/base_mdpi"
            android:text="ButtonTest"
            android:textAllCaps="false"/>

        <com.angcyo.uiview.widget.RImageView
            android:id="@+id/view6"
            android:layout_width="@dimen/base_100dpi"
            android:layout_height="@dimen/base_50dpi"
            android:layout_margin="@dimen/base_mdpi"
            android:clickable="true"
            android:scaleType="centerCrop"
            android:text="ButtonTest"
            android:textAllCaps="false"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/view7"
            android:layout_width="@dimen/base_100dpi"
            android:layout_height="@dimen/base_50dpi"
            android:layout_margin="@dimen/base_mdpi"
            android:background="@color/base_gray"
            android:src="@drawable/icon_picture_green"
            android:text="ButtonTest"
            android:textAllCaps="false"/>


        <ImageView
            android:id="@+id/view8"
            android:layout_width="@dimen/base_100dpi"
            android:layout_height="@dimen/base_50dpi"
            android:layout_margin="@dimen/base_mdpi"
            android:background="@color/base_gray"
            android:src="@drawable/icon_picture_green"
            android:text="ButtonTest"
            android:textAllCaps="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    </LinearLayout>


</LinearLayout>
