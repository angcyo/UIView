<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.angcyo.uiview.widget.ExEditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="@dimen/base_xhdpi"
        android:gravity="top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/view1"
            android:layout_width="@dimen/base_100dpi"
            android:layout_height="@dimen/base_50dpi"
            android:layout_margin="@dimen/base_mdpi"
            android:text="ButtonTest"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/view2"
            android:layout_width="@dimen/base_100dpi"
            android:layout_height="@dimen/base_50dpi"
            android:layout_margin="@dimen/base_mdpi"
            android:text="ButtonTest"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/view3"
            android:layout_width="@dimen/base_100dpi"
            android:layout_height="@dimen/base_50dpi"
            android:layout_margin="@dimen/base_mdpi"
            android:text="ButtonTest"
            android:textAllCaps="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/view4"
            android:layout_width="@dimen/base_100dpi"
            android:layout_height="@dimen/base_50dpi"
            android:layout_margin="@dimen/base_mdpi"
            android:text="ButtonTest"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/view5"
            android:layout_width="@dimen/base_100dpi"
            android:layout_height="@dimen/base_50dpi"
            android:layout_margin="@dimen/base_mdpi"
            android:text="ButtonTest"
            android:textAllCaps="false"/>

        <com.angcyo.uiview.widget.RImageView
            android:id="@+id/view6"
            android:layout_width="@dimen/base_100dpi"
            android:layout_height="@dimen/base_50dpi"
            android:layout_margin="@dimen/base_mdpi"
            android:clickable="true"
            android:scaleType="centerCrop"
            android:text="ButtonTest"
            android:textAllCaps="false"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/view7"
            android:layout_width="@dimen/base_100dpi"
            android:layout_height="@dimen/base_50dpi"
            android:layout_margin="@dimen/base_mdpi"
            android:background="@color/base_gray"
            android:src="@drawable/icon_picture_green"
            android:text="ButtonTest"
            android:textAllCaps="false"/>


        <ImageView
            android:id="@+id/view8"
            android:layout_width="@dimen/base_100dpi"
            android:layout_height="@dimen/base_50dpi"
            android:layout_margin="@dimen/base_mdpi"
            android:background="@color/base_gray"
            android:src="@drawable/icon_picture_green"
            android:text="ButtonTest"
            android:textAllCaps="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_xhdpi"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/base_mdpi"
            android:text="Button"/>

        <Button
            android:id="@+id/button_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/base_mdpi"
            android:text="Button"/>

        <Button
            android:id="@+id/button_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/base_mdpi"
            android:text="Button"/>

        <Button
            android:id="@+id/button_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/base_mdpi"
            android:text="Button"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_xhdpi"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/base_mdpi"
            android:text="Button"/>

        <Button
            android:id="@+id/button_2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/base_mdpi"
            android:text="Button"/>

        <Button
            android:id="@+id/button_3_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/base_mdpi"
            android:text="Button"/>

        <Button
            android:id="@+id/button_4_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/base_mdpi"
            android:text="Button"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_xhdpi"
        android:orientation="horizontal">

        <View
            android:id="@+id/button1_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="@dimen/base_mdpi"
            android:background="@drawable/base_dash_shape"/>

        <Button
            android:id="@+id/button1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/base_mdpi"
            android:background="@drawable/base_dash_shape"
            android:text="Button"/>

        <EditText
            android:id="@+id/button1_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/base_mdpi"
            android:background="@drawable/base_dash_shape"
            android:text="Button"/>

        <Button
            android:id="@+id/button1_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/base_mdpi"
            android:text="Button"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_xhdpi"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/base_mdpi"
            android:text="B2_1"/>

        <Button
            android:id="@+id/button2_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/base_mdpi"
            android:text="B2_2"/>

        <Button
            android:id="@+id/button2_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/base_mdpi"
            android:text="B2_3"/>

        <Button
            android:id="@+id/button2_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/base_mdpi"
            android:text="B2_4"/>

    </LinearLayout>


</LinearLayout>
