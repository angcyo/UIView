<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.angcyo.uiview.recycler.RExLoopRecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <com.angcyo.uiview.widget.Button
            android:id="@+id/pre_button"
            style="@style/BaseGradientButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="上一个"/>

        <com.angcyo.uiview.widget.Button
            android:id="@+id/next_button"
            style="@style/BaseGradientButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:text="下一个"/>

        <TextView
            android:id="@+id/tip_view"
            style="@style/BaseMainTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:text="当前"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/base_hdpi"
        android:paddingTop="@dimen/base_hdpi">

        <CheckBox
            android:id="@+id/infinite_cb"
            style="@style/BaseMainTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="无限循环"/>

        <CheckBox
            android:id="@+id/start_scroll"
            style="@style/BaseMainTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="开始滚动"/>

        <CheckBox
            android:id="@+id/vertical_scroll"
            style="@style/BaseMainTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="垂直方向"/>

    </LinearLayout>

</LinearLayout>
