<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/base_xxhdpi">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <com.angcyo.github.textview.shimmer.ShimmerTextView
            android:id="@+id/shimmer_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/theme_color_primary"
            android:textSize="40sp"
            android:textStyle="bold"
            app:reflectionColor="#999"/>

        <com.angcyo.github.textview.shimmer.ShimmerButton
            android:id="@+id/shimmer_button_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/theme_color_primary"
            android:textSize="40sp"
            android:textStyle="bold"
            app:reflectionColor="#F00"/>

    </LinearLayout>
</RelativeLayout>