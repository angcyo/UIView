        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1000dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl">

            <ImageView
                android:id="@+id/right_ico_view20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
