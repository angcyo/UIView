                    android:layout_height="wrap_content"
                    android:layout_marginStart="-70dp"
                    android:layout_toEndOf="@id/right_content_view20"
                    android:src="@drawable/base_load"/>

            </RelativeLayout>

        </RelativeLayout>

        <View
