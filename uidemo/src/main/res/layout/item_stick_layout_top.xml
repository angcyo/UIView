<?xml version="1.0" encoding="utf-8"?>
<com.angcyo.uiview.design.TestLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.angcyo.uiview.widget.RImageView
        android:id="@+id/base_image_view"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:clickable="true"
        android:scaleType="centerCrop"
        android:src="@drawable/image_demo"/>

    <TextView
        android:id="@+id/text_view"
        style="@style/BaseMainTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/base_40dpi"
        android:background="@color/base_chat_bg_color"
        android:text="测试文本"/>

    <TextView
        style="@style/BaseMainTextStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_40dpi"
        android:background="@color/theme_color_primary_dark_tran2"
        android:gravity="right|center_vertical"
        android:text="测试文本2"/>

</com.angcyo.uiview.design.TestLayout>
