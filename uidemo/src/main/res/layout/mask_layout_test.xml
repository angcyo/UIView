<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent_dark20"
        android:orientation="horizontal">

        <com.angcyo.uidemo.layout.demo.view.MaskImageView
            android:id="@+id/mask_image_view1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:background="@color/transparent_dark80"
            android:scaleType="centerCrop"
            android:src="@drawable/image_demo"/>

        <com.angcyo.uidemo.layout.demo.view.MaskImageView
            android:id="@+id/mask_image_view2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:background="@color/transparent_dark80"
            android:src="@drawable/image_demo"/>

        <com.angcyo.uidemo.layout.demo.view.MaskImageView
            android:id="@+id/mask_image_view3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:background="@color/transparent_dark80"
            android:src="@drawable/image_demo"/>

        <com.angcyo.uidemo.layout.demo.view.MaskLayout
            android:id="@+id/mask_layout_view1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:background="@color/transparent_dark80">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/image_demo"/>
        </com.angcyo.uidemo.layout.demo.view.MaskLayout>

        <com.angcyo.uidemo.layout.demo.view.MaskLayout
            android:id="@+id/mask_layout_view2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:background="@color/transparent_dark80">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/image_demo"/>
        </com.angcyo.uidemo.layout.demo.view.MaskLayout>


        <com.angcyo.uidemo.layout.demo.view.MaskLayout
            android:id="@+id/mask_layout_view3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:background="@color/transparent_dark80">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/round_shape"/>
        </com.angcyo.uidemo.layout.demo.view.MaskLayout>
    </LinearLayout>

</LinearLayout>