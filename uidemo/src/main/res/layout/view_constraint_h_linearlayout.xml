<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="@color/transparent_dark20">

    <com.angcyo.uiview.widget.Button
        android:id="@+id/button1"
        style="@style/BaseSkinButtonStyle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="按钮1"
        app:layout_constraintLeft_toRightOf="parent"/>

    <com.angcyo.uiview.widget.Button
        android:id="@+id/button2"
        style="@style/BaseSkinButtonStyle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="按钮2"
        app:layout_constraintLeft_toRightOf="@id/button1"/>

    <com.angcyo.uiview.widget.Button
        android:id="@+id/button3"
        style="@style/BaseSkinButtonStyle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="按钮3"
        app:layout_constraintLeft_toRightOf="@id/button2"/>

    <com.angcyo.uiview.widget.Button
        android:id="@+id/button4"
        style="@style/BaseSkinButtonStyle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="按钮4"
        app:layout_constraintLeft_toRightOf="@id/button3"/>

    <com.angcyo.uiview.widget.Button
        android:id="@+id/button11"
        style="@style/BaseSkinButtonStyle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="按钮11"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="parent"/>

    <com.angcyo.uiview.widget.Button
        android:id="@+id/button21"
        style="@style/BaseSkinButtonStyle2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/base_hdpi"
        android:layout_marginStart="@dimen/base_hdpi"
        android:text="按钮21"
        app:layout_constraintLeft_toRightOf="@id/button11"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/button11"/>

    <com.angcyo.uiview.widget.Button
        android:id="@+id/button12"
        style="@style/BaseSkinButtonStyle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_xhdpi"
        android:text="按钮12"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintTop_toBottomOf="@id/button1"/>

    <com.angcyo.uiview.widget.Button
        android:id="@+id/button22"
        style="@style/BaseSkinButtonStyle2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/base_hdpi"
        android:text="按钮22"
        app:layout_constraintHorizontal_weight="0.3"
        app:layout_constraintLeft_toRightOf="@id/button12"
        app:layout_constraintRight_toLeftOf="@id/button32"
        app:layout_constraintTop_toTopOf="@id/button12"/>

    <com.angcyo.uiview.widget.Button
        android:id="@+id/button222"
        style="@style/BaseSkinButtonStyle2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_xhdpi"
        android:text="按钮222"
        app:layout_constraintHorizontal_weight="0.3"
        app:layout_constraintLeft_toRightOf="@id/button12"
        app:layout_constraintRight_toLeftOf="@id/button32"
        app:layout_constraintTop_toBottomOf="@id/button22"/>

    <com.angcyo.uiview.widget.Button
        android:id="@+id/button2222"
        style="@style/BaseSkinButtonStyle2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_xhdpi"
        android:text="按钮2222"
        app:layout_constraintHorizontal_weight="0.3"
        app:layout_constraintLeft_toRightOf="@id/button12"
        app:layout_constraintRight_toLeftOf="@id/button32"
        app:layout_constraintTop_toBottomOf="@id/button222"/>

    <com.angcyo.uiview.widget.Button
        android:id="@+id/button32"
        style="@style/BaseSkinButtonStyle2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/base_xhdpi"
        android:text="按钮32"
        app:layout_constraintHorizontal_weight="0.7"
        app:layout_constraintLeft_toRightOf="@id/button22"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/button12"/>

    <com.angcyo.uiview.widget.Button
        android:id="@+id/button31"
        style="@style/BaseSkinButtonStyle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_xhdpi"
        android:text="按钮31"
        app:layout_constraintTop_toBottomOf="@id/button2222"/>

    <com.angcyo.uiview.widget.Button
        android:id="@+id/button42"
        style="@style/BaseSkinButtonStyle2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/base_xhdpi"
        android:layout_marginStart="@dimen/base_xhdpi"
        android:text="按钮42"
        app:layout_constraintLeft_toRightOf="@id/button31"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/button31"/>

</android.support.constraint.ConstraintLayout>