<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/base_xhdpi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.angcyo.uiview.widget.RTextView
            android:id="@+id/tip_view"
            style="@style/BaseDarkTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="测试文本"/>

        <com.angcyo.uiview.widget.Button
            android:id="@+id/apply_button"
            style="@style/BaseSkinButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/base_hdpi"
            android:paddingEnd="@dimen/base_hdpi"
            android:paddingStart="@dimen/base_hdpi"
            android:text="引用"/>

        <com.angcyo.uiview.widget.Button
            android:id="@+id/button"
            style="@style/BaseSkinButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/base_hdpi"
            android:paddingEnd="@dimen/base_hdpi"
            android:paddingStart="@dimen/base_hdpi"
            android:text="验证"/>

    </LinearLayout>

    <com.angcyo.uiview.widget.ExEditText
        android:id="@+id/edit_text"
        style="@style/BaseMainTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:maxHeight="@dimen/base_100dpi"
        android:minHeight="@dimen/base_item_size"
        android:textSize="14dp"
        tools:text="测试文本"/>

</LinearLayout>