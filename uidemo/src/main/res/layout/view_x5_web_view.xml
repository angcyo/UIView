<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/base_hdpi">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.angcyo.uiview.widget.ExEditText
                android:id="@+id/edit_text"
                style="@style/BaseMainTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12dp"/>

            <com.angcyo.uiview.widget.Button
                android:id="@+id/go_button"
                style="@style/BaseSkinButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Go"/>

            <com.angcyo.uiview.widget.Button
                android:id="@+id/new_button"
                style="@style/BaseSkinButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="@dimen/base_hdpi"
                android:text="new"/>

            <com.angcyo.uiview.widget.Button
                android:id="@+id/cookie_button"
                style="@style/BaseSkinButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="@dimen/base_hdpi"
                android:text="Cookie"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.angcyo.uiview.widget.Button
                android:id="@+id/js_url"
                style="@style/BaseSkinButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="js_url"/>

            <com.angcyo.uiview.widget.Button
                android:id="@+id/js_call"
                style="@style/BaseSkinButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="@dimen/base_hdpi"
                android:text="js_call"/>

            <com.angcyo.uiview.widget.Button
                android:id="@+id/upload_file"
                style="@style/BaseSkinButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="@dimen/base_hdpi"
                android:text="upload_file"/>
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.angcyo.uidemo.x5.X5WebView
            android:id="@+id/web_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.angcyo.uiview.recycler.RRecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_gravity="bottom|right"
            android:alpha="0.6"/>

    </FrameLayout>

</LinearLayout>