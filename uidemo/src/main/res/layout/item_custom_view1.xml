<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/base_xxhdpi">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.angcyo.uiview.widget.ExEditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="bottom"
            android:hint="文本测试"
            app:r_left_text="Demo:"/>
    </android.support.design.widget.TextInputLayout>

    <com.angcyo.uiview.widget.ExEditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="文本测试"
        android:singleLine="true"
        app:r_left_text="agG测试文本"
        app:r_left_text_color="@color/colorAccent"/>

    <com.angcyo.uiview.widget.ExEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/base_load"
        android:hint="文本测试"
        app:r_left_text="agG"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/base_load"
        android:hint="文本测试"/>

    <com.angcyo.uidemo.layout.demo.view.MaxLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/base_xhdpi"
        android:background="@color/default_base_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.angcyo.uiview.widget.RTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="很长的文本很长的文本很长的文本"/>

        <com.angcyo.uiview.widget.RImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"/>

    </com.angcyo.uidemo.layout.demo.view.MaxLinearLayout>


    <com.angcyo.uidemo.layout.demo.view.MaxLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/base_xhdpi"
        android:background="@color/default_base_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.angcyo.uiview.widget.RTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="很长的文本很长的文本很长的文本很长的文本很长的文本很很长的文本很长的文本很长的文本很长的文本很长的文本很长的文本长的文本很长的文本很长的文本很长的文本很长的文本很长的文本很长的文本"/>

        <com.angcyo.uiview.widget.RImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"/>

    </com.angcyo.uidemo.layout.demo.view.MaxLinearLayout>

    <com.angcyo.uidemo.layout.demo.view.MaxLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.angcyo.uidemo.layout.demo.view.BatteryView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.angcyo.uidemo.layout.demo.view.ToughDrumView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/base_xxhdpi"/>
    </com.angcyo.uidemo.layout.demo.view.MaxLinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.angcyo.uiview.widget.RSeekBar
            android:id="@+id/seek_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/base_xhdpi"
            android:layout_weight="1"
            android:paddingBottom="@dimen/base_xhdpi"
            android:paddingStart="@dimen/base_50dpi"
            android:paddingTop="@dimen/base_xhdpi"
            app:r_cur_progress="50"/>

        <com.angcyo.uiview.widget.RTextView
            android:id="@+id/progress_view"
            style="@style/BaseDarkTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:minWidth="30dp"
            android:text="0"/>

    </LinearLayout>

</LinearLayout>