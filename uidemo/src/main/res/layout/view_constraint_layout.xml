<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_text_color_dark"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">

    <com.angcyo.uidemo.layout.demo.view.AutoHideImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginEnd="@dimen/base_xhdpi"
        android:layout_marginStart="@dimen/base_xhdpi"
        android:layout_marginTop="@dimen/base_xhdpi"
        android:scaleType="fitXY"
        android:src="@drawable/image_demo"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="0dp"/>

    <com.angcyo.uidemo.layout.demo.view.AutoHideTextView
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="@dimen/base_xhdpi"
        android:background="@color/base_orange"
        android:text="测试专用文本"
        app:layout_constraintDimensionRatio="W,3:4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_goneMarginTop="@dimen/base_xxxhdpi"/>

    <com.angcyo.uidemo.layout.demo.view.AutoHideButton
        android:id="@+id/autoHideButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="  按钮测试"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="测试文本"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp"/>

</android.support.constraint.ConstraintLayout>
