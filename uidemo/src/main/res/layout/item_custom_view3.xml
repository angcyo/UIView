<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/base_xxhdpi">

    <com.angcyo.uidemo.layout.demo.view.DemoViewGroup
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/base_red_d85940">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>

        <Button
            android:id="@+id/button1"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@color/base_orange"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/base_gray"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@color/base_red"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>
    </com.angcyo.uidemo.layout.demo.view.DemoViewGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_xhdpi"
        android:background="@color/base_gray"
        android:orientation="horizontal">

        <com.angcyo.uiview.widget.SimpleProgressBar
            android:id="@+id/progress_view1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:r_progress_style="CIRCLE"/>

        <com.angcyo.uiview.widget.SimpleProgressBar
            android:id="@+id/progress_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/base_xhdpi"
            app:r_progress_style="CIRCLE"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent_dark"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.angcyo.uidemo.layout.demo.view.HotPackageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="visible"/>

        <com.angcyo.uidemo.layout.demo.view.HotPackageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:visibility="visible"/>

        <com.angcyo.uidemo.layout.demo.view.HotPackageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:visibility="visible"/>

        <com.angcyo.uidemo.layout.demo.view.HotPackageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"/>

        <com.angcyo.uiview.widget.ShakeImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hot_package_1"
            android:visibility="visible"/>

        <com.angcyo.uiview.widget.ShakeImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/base_san_ico"
            android:visibility="visible"
            app:r_shake_y_ratio="0.85"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/base_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.angcyo.uiview.widget.SexView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/base_xhdpi"
            app:r_sex="MALE"/>

        <com.angcyo.uiview.widget.SexView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/base_xhdpi"
            app:r_sex="FEMALE"/>

        <com.angcyo.uiview.widget.SexView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/base_xhdpi"
            app:r_age="20"
            app:r_sex="FEMALE"/>

        <com.angcyo.uiview.widget.SexView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/base_xhdpi"
            app:r_age="11120"
            app:r_sex="MALE"/>

        <com.angcyo.uiview.widget.SexView
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:layout_marginStart="@dimen/base_xhdpi"
            app:r_sex="MALE"/>

        <com.angcyo.uiview.widget.SexView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginStart="@dimen/base_xhdpi"
            app:r_sex="FEMALE"/>

        <com.angcyo.uiview.widget.SexView
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginStart="@dimen/base_xhdpi"
            app:r_age="20"
            app:r_sex="FEMALE"/>

        <com.angcyo.uiview.widget.SexView
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_marginStart="@dimen/base_xhdpi"
            app:r_age="11120"
            app:r_sex="MALE"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_hdpi"
        android:orientation="vertical">

        <com.angcyo.uiview.widget.RRangeBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.angcyo.uiview.widget.RRangeBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/base_xhdpi"
            app:r_max_value="80"
            app:r_min_value="30"/>

        <com.angcyo.uiview.widget.RRangeBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/base_xxhdpi"
            android:paddingStart="@dimen/base_xhdpi"
            app:r_max_value="80"
            app:r_min_range="10"
            app:r_min_value="30"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_mdpi"
        android:orientation="vertical">

        <com.angcyo.uidemo.layout.demo.view.RProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_40dpi"/>

    </LinearLayout>
</LinearLayout>
