<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/base_xxhdpi">

    <com.angcyo.uidemo.layout.demo.view.DemoViewGroup
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/base_red_d85940">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>

        <Button
            android:id="@+id/button1"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@color/base_orange"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/base_gray"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@color/base_red"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>
    </com.angcyo.uidemo.layout.demo.view.DemoViewGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_xhdpi"
        android:background="@color/base_gray"
        android:orientation="horizontal">

        <com.angcyo.uiview.widget.SimpleProgressBar
            android:id="@+id/progress_view1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:r_progress_style="CIRCLE"/>

        <com.angcyo.uiview.widget.SimpleProgressBar
            android:id="@+id/progress_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/base_xhdpi"
            app:r_progress_style="CIRCLE"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent_dark"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.angcyo.uidemo.layout.demo.view.HotPackageView
            android:layout_width="40dp"
            android:visibility="visible"
            android:layout_height="40dp"/>

        <com.angcyo.uidemo.layout.demo.view.HotPackageView
            android:layout_width="60dp"
            android:visibility="visible"
            android:layout_height="60dp"/>

        <com.angcyo.uidemo.layout.demo.view.HotPackageView
            android:layout_width="70dp"
            android:visibility="visible"
            android:layout_height="70dp"/>

        <com.angcyo.uidemo.layout.demo.view.HotPackageView
            android:layout_width="wrap_content"
            android:visibility="visible"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
