<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <com.angcyo.uiview.viewgroup.RGalleryLayout
        android:id="@+id/gallery_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/transparent_dark20">

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/base_red"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/base_gold_color"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_bright"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_light"/>

    </com.angcyo.uiview.viewgroup.RGalleryLayout>

    <com.angcyo.uiview.widget.RTextView
        android:id="@+id/text_view"
        style="@style/BaseMainTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="angcyo"/>

    <com.angcyo.uiview.game.GameRenderView
        android:id="@+id/game_render_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/transparent_dark80">

    </com.angcyo.uiview.game.GameRenderView>

    <com.angcyo.uiview.widget.group.HumpTabLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/base_xhdpi"
        android:background="@color/transparent_dark20"
        app:r_hump_height="40dp">

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/base_red"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/base_gold_color"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_bright"
            app:r_is_hump="true"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_light"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_dark"
            android:gravity="center_horizontal"
            android:text="文本测试"
            app:r_is_hump="true"/>

    </com.angcyo.uiview.widget.group.HumpTabLayout>


</LinearLayout>