<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/base_xxhdpi">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_mdpi"
        android:background="@color/base_gray_tran"
        android:gravity="center"
        android:orientation="vertical">

        <com.angcyo.uiview.widget.RadarScanExView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"/>

        <com.angcyo.uiview.widget.CircleImageView
            android:layout_width="@dimen/base_40dpi"
            android:layout_height="@dimen/base_40dpi"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/image_demo"
            app:r_line_width="2dp"
            app:r_show_type="CIRCLE"/>

    </FrameLayout>

</LinearLayout>
