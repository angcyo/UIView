<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="@dimen/base_round_radius"
                     android:bottomRightRadius="@dimen/base_round_radius"/>
            <solid android:color="@color/default_base_bg_press"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="@dimen/base_round_radius"
                     android:bottomRightRadius="@dimen/base_round_radius"/>
            <solid android:color="@color/default_base_bg_disable"/>
        </shape>
    </item>
    <item android:drawable="@android:color/transparent"/>
</selector>
