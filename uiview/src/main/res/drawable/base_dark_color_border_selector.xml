<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/base_border_little_size"
                    android:color="@color/base_text_color"/>
            <solid android:color="@color/base_text_color"/>
            <corners android:radius="@dimen/base_round_little_radius"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/base_border_little_size"
                    android:color="@color/base_text_color"/>
            <solid android:color="@color/base_text_color"/>
            <corners android:radius="@dimen/base_round_little_radius"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/base_border_little_size"
                    android:color="@color/base_text_color_dark"/>
            <corners android:radius="@dimen/base_round_little_radius"/>
        </shape>
    </item>
</selector>