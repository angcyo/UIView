<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/base_item_size"
        android:background="@drawable/base_bg2_selector"
        android:clickable="true"
        android:gravity="center_vertical|left"
        android:paddingEnd="@dimen/base_xxhdpi"
        android:paddingStart="@dimen/base_xxhdpi"
        android:text="@string/base_cancel"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/base_item_size"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/btnCancel"
        android:layout_toStartOf="@+id/btnSubmit"
        android:gravity="center"/>

    <TextView
        android:id="@id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/base_item_size"
        android:layout_alignParentEnd="true"
        android:background="@drawable/base_bg2_selector"
        android:clickable="true"
        android:gravity="center_vertical|right"
        android:paddingEnd="@dimen/base_xxhdpi"
        android:paddingStart="@dimen/base_xxhdpi"
        android:text="@string/base_ok"/>
</RelativeLayout>
